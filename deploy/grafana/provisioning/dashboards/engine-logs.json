{
  "uid": "trubuild-engine-logs",
  "title": "TruBuild - Engine & Worker Logs",
  "description": "Logs from the Python AI/ML backend engine and engine-worker",
  "tags": ["trubuild", "engine", "worker", "python"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "id": 1,
      "title": "Engine Container Log Volume",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({service=~\"engine|engine-worker\"} [1m])) by (service)",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "bars", "fillOpacity": 50 },
          "unit": "short"
        }
      }
    },
    {
      "id": 2,
      "title": "Engine File Log Volume",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 8, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({job=~\"engine|engine-process\"} [1m])) by (job)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "bars", "fillOpacity": 50 },
          "unit": "short"
        }
      }
    },
    {
      "id": 3,
      "title": "Engine & Worker Errors",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 8, "x": 16, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({service=~\"engine|engine-worker\"} |~ \"(?i)(error|traceback|exception|fatal)\" [5m])) by (service)",
          "legendFormat": "{{service}} errors",
          "refId": "A"
        },
        {
          "expr": "sum(count_over_time({job=~\"engine|engine-process\"} |~ \"(?i)(error|traceback|exception|fatal)\" [5m])) by (job)",
          "legendFormat": "{{job}} file errors",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": { "drawStyle": "bars", "fillOpacity": 80 },
          "unit": "short"
        }
      }
    },
    {
      "id": 4,
      "title": "Engine Container Logs",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 6 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{service=\"engine\"} |~ \"$search\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    },
    {
      "id": 5,
      "title": "Engine Worker Container Logs",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 16 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{service=\"engine-worker\"} |~ \"$search\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "templating": {
    "list": [
      {
        "name": "search",
        "type": "textbox",
        "current": { "value": ".*" },
        "label": "Search"
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "version": 1
}
