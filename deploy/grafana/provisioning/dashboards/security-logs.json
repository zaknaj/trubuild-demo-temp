{
  "uid": "trubuild-security-logs",
  "title": "TruBuild - Security & SSH Logs",
  "description": "SSH activity, auth logs, firewall events, and kernel security logs",
  "tags": ["trubuild", "security", "ssh", "firewall"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "id": 1,
      "title": "SSH Failed Login Attempts",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 8, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({job=\"ssh\"} |~ \"(?i)(failed password|invalid user|authentication failure)\" [5m])",
          "legendFormat": "Failed Logins / 5min",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "red", "mode": "fixed" },
          "custom": { "drawStyle": "bars", "fillOpacity": 80 },
          "unit": "short"
        }
      }
    },
    {
      "id": 2,
      "title": "SSH Successful Logins",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 8, "x": 8, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({job=\"ssh\"} |~ \"(?i)(accepted|session opened)\" [5m])",
          "legendFormat": "Successful Logins / 5min",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "green", "mode": "fixed" },
          "custom": { "drawStyle": "bars", "fillOpacity": 80 },
          "unit": "short"
        }
      }
    },
    {
      "id": 3,
      "title": "Firewall / iptables Events",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 8, "x": 16, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({job=\"kernel\"} |~ \"(?i)(iptables|nftables|UFW|BLOCK|DROP|REJECT|firewall)\" [5m])",
          "legendFormat": "Firewall Events / 5min",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "orange", "mode": "fixed" },
          "custom": { "drawStyle": "bars", "fillOpacity": 80 },
          "unit": "short"
        }
      }
    },
    {
      "id": 4,
      "title": "SSH / Auth Failed Events (Total)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 7 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({job=\"ssh\"} |~ \"(?i)(failed|invalid|denied)\" [$__range])",
          "legendFormat": "",
          "refId": "A",
          "instant": false
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 20 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["sum"] },
        "textMode": "value_and_name",
        "colorMode": "background"
      }
    },
    {
      "id": 5,
      "title": "SSH Accepted (Total)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 7 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({job=\"ssh\"} |~ \"(?i)accepted\" [$__range])",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "blue", "value": 10 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["sum"] },
        "textMode": "value_and_name",
        "colorMode": "background"
      }
    },
    {
      "id": 6,
      "title": "Kernel Security Events (Total)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 7 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({job=\"kernel\"} |~ \"(?i)(segfault|oom|panic|error)\" [$__range])",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 5 },
              { "color": "red", "value": 20 }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["sum"] },
        "textMode": "value_and_name",
        "colorMode": "background"
      }
    },
    {
      "id": 7,
      "title": "Syslog Events (Total)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 7 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "count_over_time({job=\"syslog\"} [$__range])",
          "legendFormat": "",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        }
      },
      "options": {
        "reduceOptions": { "calcs": ["sum"] },
        "textMode": "value_and_name",
        "colorMode": "background"
      }
    },
    {
      "id": 8,
      "title": "Auth / SSH Log Stream",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 11 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{job=\"ssh\"} |~ \"$search\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    },
    {
      "id": 9,
      "title": "Kernel / Firewall Log Stream",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 21 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{job=\"kernel\"} |~ \"$search\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    },
    {
      "id": 10,
      "title": "Syslog Stream",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 31 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{job=\"syslog\"} |~ \"$search\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    }
  ],
  "refresh": "30s",
  "schemaVersion": 39,
  "templating": {
    "list": [
      {
        "name": "search",
        "type": "textbox",
        "current": { "value": ".*" },
        "label": "Search"
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "version": 1
}
